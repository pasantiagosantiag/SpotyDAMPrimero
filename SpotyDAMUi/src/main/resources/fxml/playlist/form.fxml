<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXMasonryPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ies.sequeros.dam.spotydam.playlist.PlayListController">
    <StackPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
    <VBox alignment="CENTER" maxWidth="550">
        <children>
            <Text fx:id="titulo" strokeType="OUTSIDE" strokeWidth="0.0" text="PlayList">
               <VBox.margin>
                  <Insets bottom="40.0" />
               </VBox.margin></Text>
            <HBox alignment="CENTER_LEFT" maxWidth="Infinity" spacing="10">
                <Label minWidth="100" text="Name:" />
                <TextField fx:id="nameField" promptText="Name" HBox.hgrow="ALWAYS" />
               <padding>
                  <Insets bottom="20.0" />
               </padding>
            </HBox>


            <HBox alignment="CENTER_LEFT" maxWidth="Infinity" spacing="10">
                <Label minWidth="100" text="Description:" />
                <TextField fx:id="description" promptText="Description" HBox.hgrow="ALWAYS" />
                <padding>
                    <Insets bottom="20.0" />
                </padding>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label minWidth="100" text="Image:" />
                <TextField fx:id="pathImagenField" editable="false" HBox.hgrow="ALWAYS" />
                <Button fx:id="imagenBtn">
                  <graphic>
                     <FontIcon iconLiteral="fa-file-image-o" iconSize="24" />
                  </graphic></Button>
               <ImageView fx:id="imageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                <padding>
                    <Insets bottom="20.0" />
                </padding>
            </HBox>




            <HBox alignment="CENTER_LEFT" maxWidth="Infinity" spacing="10">
                <Label minWidth="100" text="Public:" />
            <CheckBox fx:id="isPublic" HBox.hgrow="ALWAYS" />
               <padding>
                  <Insets bottom="20.0" />
               </padding>
            </HBox>

            <HBox alignment="CENTER" spacing="20.0">
                <children>
                    <Button fx:id="guardarBtn">
                     <graphic>
                        <FontIcon iconLiteral="fa-save" iconSize="24" />
                     </graphic></Button>
                    <Button fx:id="cancelarBtn">
                     <graphic>
                        <FontIcon iconLiteral="anto-close-square" iconSize="24" />
                     </graphic></Button>
                </children>
                <opaqueInsets>
                    <Insets right="40.0" />
                </opaqueInsets>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </HBox>
            <HBox fx:id="masonary" prefHeight="200.0" VBox.vgrow="ALWAYS">
               <children>
                  <JFXMasonryPane style="-fx-background-color: orange;" />
               </children>
            </HBox>
        </children>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </VBox>
    </StackPane>
</AnchorPane>
