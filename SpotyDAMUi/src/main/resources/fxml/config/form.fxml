<AnchorPane maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"  fx:controller="ies.sequeros.dam.spotydam.config.ConfigureController">
    <StackPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <VBox alignment="CENTER" maxWidth="550">
            <children>
                <Text  strokeType="OUTSIDE" strokeWidth="0.0" text="Configuración">
                    <VBox.margin>
                        <Insets bottom="40.0" />
                    </VBox.margin></Text>
                <HBox alignment="CENTER_LEFT" maxWidth="Infinity" spacing="10">
                    <Label minWidth="100" text="Images(Directory):" />
                    <TextField fx:id="rutaImagenesField" promptText="directory" HBox.hgrow="ALWAYS" />
                    <padding>
                        <Insets bottom="20.0" />
                    </padding>
                </HBox>
                <HBox alignment="CENTER_LEFT" maxWidth="Infinity" spacing="10">
                    <Label minWidth="100" text="Song(Directory) Path:" />
                    <TextField fx:id="rutaCancionesField" promptText="directory" HBox.hgrow="ALWAYS" />
                    <padding>
                        <Insets bottom="20.0" />
                    </padding>
                </HBox>
                <HBox alignment="CENTER_LEFT" maxWidth="Infinity" spacing="10">
                    <Label minWidth="100" text="PlayList Path:" />
                    <TextField fx:id="playlistsjsonpathField" promptText="path" HBox.hgrow="ALWAYS" />
                    <padding>
                        <Insets bottom="20.0" />
                    </padding>
                </HBox>
                <HBox alignment="CENTER_LEFT" maxWidth="Infinity" spacing="10">
                    <Label minWidth="100" text="Song Path:" />
                    <TextField fx:id="sonsjsonpathField" promptText="path" HBox.hgrow="ALWAYS" />
                    <padding>
                        <Insets bottom="20.0" />
                    </padding>
                </HBox>
                <HBox alignment="CENTER_LEFT" maxWidth="Infinity" spacing="10">
                    <Label minWidth="100" text="User Path:" />
                    <TextField fx:id="userjsonpathField" promptText="path" HBox.hgrow="ALWAYS" />
                    <padding>
                        <Insets bottom="20.0" />
                    </padding>
                </HBox>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="guardarBtn" text="Guardar" />
                        <Button fx:id="cancelarBtn" text="Cancelar" />
                    </children>
                    <opaqueInsets>
                        <Insets right="40.0" />
                    </opaqueInsets>
                    <padding>
                        <Insets bottom="10.0" />
                    </padding>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </StackPane>
</AnchorPane>

